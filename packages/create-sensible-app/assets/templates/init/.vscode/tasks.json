{
  "version": "2.0.0",
  "tasks": [
    //pull
    {
      "label": "pull",
      "type": "shell",
      "command": "source ~/.zshrc && git stash && git pull && git stash pop && yarn",
      "group": "none",
      "presentation": {
        "echo": false,
        "focus": false,
        "group": "run",
        "panel": "shared",
        "reveal": "never"
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

    // core
    {
        "label": "Launch server",
        "dependsOn": "pull",
      "type": "shell",
      "command": "source ~/.zshrc && cd packages/core && yarn dev", // Enter your command here
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "run"
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    
    // server
    {
      "dependsOn": "pull",
      "label": "Launch web",
      "type": "shell",
      "command": "source ~/.zshrc && cd apps/server && yarn dev", // Enter your command here
      "group": "none",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "run"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

     // web
    {
      "dependsOn": "pull",
      "label": "Launch web",
      "type": "shell",
      "command": "source ~/.zshrc && cd apps/web && yarn dev", // Enter your command here
      "group": "none",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "run"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

     // app
    {
        "label": "Launch app",
        "dependsOn": "pull",
      "type": "shell",
      "command": "source ~/.zshrc && cd apps/app && yarn start", // Enter your command here
      "group": "none",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "run"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

    {
      "dependsOn": "pull",
      "isBackground": true,
      "label": "Open localhost",
      "type": "shell",
      "command": "sleep 2 && open http://localhost:3000",
      "presentation": {
        "echo": false,
        "focus": false,
        "group": "run",
        "panel": "shared",
        "reveal": "never"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

    {
      "dependsOn": "pull",
      "isBackground": true,
      "label": "Open sensible docs",
      "type": "shell",
      "command": "sleep 2 && open https://docs.sensibleframework.co/localhost",
      "presentation": {
        "echo": false,
        "focus": false,
        "group": "run",
        "panel": "shared",
        "reveal": "never"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

  ]
}